{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "cd AnimalRescue && npm install",
  "buildCommand": "cd AnimalRescue && npm run build && cp -r dist ../animal-rescue-game",
  "outputDirectory": ".",
  "rewrites": [
    {
      "source": "/AnimalRescue",
      "destination": "/animal-rescue-game/index.html"
    },
    {
      "source": "/AnimalRescue/(.*)",
      "destination": "/animal-rescue-game/$1"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/animal-rescue-game/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
